<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @campaign, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of campaign" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of campaign" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :area, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
        <%= f.collection_select(:area_ids, Area.all, :id, :name,
        { prompt: "Make your selection from the list below (can be empty)" }, { multiple: true, size: 3, class: "custom-select form-control shadow rounded" })    %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.submit class: "btn btn-outline-light" %>
      </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel & go to campaigns page ]', campaigns_path, class: "row justify-content-center" %>
  </div>
</div>
