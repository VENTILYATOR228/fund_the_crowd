<div class='row'>
  <div class='col-6'>
    <%= form_with(model: @area, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label "Area name", class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the area name" %>
        </div>
      </div>

      <div class="form-group area-submit-btn">
        <%= f.submit class: "btn btn-outline-light" %>
      </div>
    <% end %>
  </div>
</div>